@page
@model StreamingLiveCore.Pages.CP.AdminModel
@{
    ViewData["Title"] = "Admin";
}
<h1><i class="fas fa-user-lock"></i>  Admin Dashboard</h1>
<div class="row">
    <div class="col-md-8">
        <div class="inputBox">
            <div class="header"><i class="far fa-calendar-alt"></i> Upcoming Services</div>
            <div class="content">
                <table class="table table-sm">
                    <tr><th>Site</th><th>Time</th></tr>
                    @Html.Raw(Model.Upcoming)
                </table>

            </div>
        </div>

    </div>
    <div class="col-md-4">
        <div class="inputBox">
            <div class="header"><i class="fas fa-users"></i> Recent Registrations</div>
            <div class="content">
                <form method="post">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search" asp-for="SearchText" />
                        <div class="input-group-append"><input type="submit" class="btn btn-primary" value="Search Sites" asp-page-handler="Search" /></div>
                    </div>
                </form>
                <table class="table table-sm" style="margin-top:20px;">
                    <tr><th>Site</th><th>Action</th></tr>
                    @foreach (StreamingLiveLib.Site site in Model.RecentSites)
                    {
                        <tr>
                            <td><a href="https://@(site.KeyName).streaminglive.church/">@(site.KeyName)</a></td>
                            <td><a asp-page-handler="Access" asp-route-id="@(site.Id)" ><i class="fas fa-sign-in-alt"></i></a></td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>
