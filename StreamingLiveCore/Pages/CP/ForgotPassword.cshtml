@page
@model StreamingLiveCore.Pages.CP.ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot Password";
    Layout = "~/Layouts/MasterLayout.cshtml";
}


@section Head {
<style>
        #loginBox {background-color:#EEE;border:1px solid #CCC;border-radius:5px;padding:20px;}
        #loginBox input {margin-bottom:5px;}
        .smallCenterBlock {margin-top:60px;max-width:350px;margin-left:auto;margin-right:auto;}
    </style>
}
<form method="post">
    <div class="smallCenterBlock">
        @Html.Raw(Model.OutputMessage)
        <div id="loginBox">
            <h2>Forgot Password</h2>
            <input type="text" class="form-control" placeholder="Email address" asp-for="Email" />
            <input type="submit" class="btn btn-lg btn-primary btn-block" value="Reset Password" asp-page-handler="Reset" />
        </div>
    </div>
</form>

