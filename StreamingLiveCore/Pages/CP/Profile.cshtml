@page
@model StreamingLiveCore.Pages.CP.ProfileModel
@{
}

<h1><i class="fas fa-user"></i> My Profile</h1>
<div class="row">
    <div class="col-md-8">
        @Html.Raw(Model.OutputMessage)
        <form method="post">
            <div class="inputBox">
                <div class="header"><i class="fas fa-users"></i> Edit Profile</div>
                <div class="content">
                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <label>Name</label>
                                <input asp-for="Name" type="text" class="form-control" />
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label>Email</label>
                                <input asp-for="Email" type="text" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <label>Password</label>
                                <input asp-for="Password" type="password" class="form-control" />
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label>Confirm Password</label>
                                <input asp-for="ConfirmPassword" type="password" class="form-control" />
                            </div>
                        </div>

                    </div>
                </div>
                <div class="footer">
                    <div class="row">
                        <div class="col"><input type="submit" value="Save" class="btn btn-primary btn-block" asp-page-handler="Save" /></div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
