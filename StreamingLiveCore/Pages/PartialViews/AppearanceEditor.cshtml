@model Pages.CP.SettingsModel
<div class="inputBox">
    <div class="header"><i class="fas fa-palette"></i> Appearance</div>
    <div class="content">
        <div class="section">Logo</div>
        <a href="javascript:uploadLogo()">@Html.Raw(Model.LogoHtml)</a>
        <input type="file" id="LogoUpload" asp-for="Logo.FormFile" style="display:none;" accept=".jpg,.png,.gif,.jpeg,.bmp" />
        <div class="form-group">
            <label>Home Page Url</label>
            <input type="text" class="form-control" asp-for="HomePageUrl" />
        </div>
        <div class="section">Colors</div>
        <div class="row">
            <div class="col">
                <div class="form-group">
                    <label>Primary</label>
                    <input type="color" class="form-control" asp-for="PrimaryColor" />
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label>Contrast</label>
                    <input type="color" class="form-control" asp-for="ContrastColor" />
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <label>Header</label>
                    <input type="color" class="form-control" asp-for="HeaderColor" />
                </div>
            </div>
        </div>
    </div>
    <div class="footer">
        <div class="row">
            <div class="col"><input id="SaveAppearanceButton" type="submit" class="btn btn-primary btn-block" value="Save" asp-page-handler="AppearanceSave" /></div>
        </div>
    </div>
</div>